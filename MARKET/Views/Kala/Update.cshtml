@using Be;
@using BLL;
@{
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}
@section Pre{
    <meta charset="utf-8">
    <title>پنل مدیریت | جی کوئری ولیدیت</title>
    <meta name="description" content="Some description for the page" />
}
<div class="content-body">

    <div class="container-fluid">
        <div class="page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">فروشگاه</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">ثبت محصول جدید</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> ثبت محصول </h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" asp-action="Update" asp-controller="Kala" asp-route-id="13" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                نام محصول <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input value="@Model.Name"  type="text" name="Name" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                قیمت محصول <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control"
                                                       name="Price" placeholder="قیمت محصول">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                تعداد محصول <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control"
                                                       name="Count" placeholder="تعداد محصول">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                رنگ محصول  <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control"
                                                       name="Color" placeholder="رنگ محصول">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                سایز محصول  <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control"
                                                       name="Size" placeholder="سایز محصول">
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group row">

                                        <label class="col-lg-4 col-form-label">
                                            دسته محصول
                                        </label>
                                        <div class="col-lg-6">
                                            <select class="form-control default-select" name="Catogory" asp-items="ViewBag.RoleId"></select>
                                        </div>
                                    </div>

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-primary btn-sm" type="button">عکس محصول</button>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" name="Pic" class="custom-file-input">
                                            <label class="custom-file-label">انتخاب فایل</label>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-rounded btn-primary" style="width:500px;height:50px">ثبت اطلاعات</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/vendor/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
    <script src="~/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
            type="text/javascript"></script>
    <script src="~/vendor/jquery-validation/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/js/plugins-init/jquery.validate-init.js" type="text/javascript"></script>
    <script src="~/js/custom.min.js" type="text/javascript"></script>
}
