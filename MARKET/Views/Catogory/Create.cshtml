@{
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}
@section Pre{
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>پنل مدیریت | جی کوئری ولیدیت</title>
    <meta name="description" content="Some description for the page" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <link href="~/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
}
<div class="content-body">
    <!-- row -->

    <div class="container-fluid">
        <div class="page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">فروشگاه</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">ثبت دسته جدید </a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> ثبت دسته  </h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" asp-action="Create" asp-controller="Catogory" method="post">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                سر دسته
                                            </label>
                                            <div class="col-lg-6">
                                                <select class="form-control default-select" name="ParentId" asp-items="ViewBag.Catogory">
                                                    <option value="0">
                                                        انتخاب کنید
                                                    </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                زیر دسته
                                            </label>
                                            <div class="col-lg-6">
                                                <select class="form-control default-select" name="Id" asp-items="ViewBag.CatogoryP">
                                                    <option value="0">
                                                        انتخاب کنید
                                                    </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">
                                                نام دسته
                                                <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" name="Title" class="form-control" placeholder="نام دسته">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <br />
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-rounded btn-primary">ثبت اطلاعات</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/vendor/bootstrap-datetimepicker/js/moment.js" type="text/javascript"></script>
    <script src="~/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
            type="text/javascript"></script>
    <script src="~/vendor/jquery-validation/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/js/plugins-init/jquery.validate-init.js" type="text/javascript"></script>
    <script src="~/js/custom.min.js" type="text/javascript"></script>
   
}



